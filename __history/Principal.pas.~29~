procedure TForm_Principal.Sair1Click(Sender: TObject);
begin
  if sairvenda = true then
    begin
    application.MessageBox('Atenção! o caixa ainda está aberto, Feche o caixa para poder sair !!!','Atenção Usuário',MB_ICONERROR);
    end
    else
      if application.MessageBox('Deseja Fechar o Aplicativo' , 'Atenção' , mb_iconquestion + mb_yesno )= id_yes
      then Application.Terminate;
end;

